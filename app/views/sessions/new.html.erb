


<div class="center-align">

  <div style="margin: 0; color: white; text-shadow: 2px 2px 16px #001117; background-image: url(/assets/rksk_splash_2.png); background-position: 50% 51%; padding: 1.2%">
      <h1 style="font-size: 21rem; margin: 0">RKSK</h1>
      <p style="font-size: 1.5rem;margin: 0;">powered by Etsy</p>
  </div>


  <div>
    <h4 style="font-size: 2rem;color: white;background-color: #26A599;margin-top: 0;padding-top: 1.5%;padding-bottom: 1.5%;">Pack for tomorrow, live for today!</h4>
  </div>
  <div class="container">
    <div class="row">
      <div class="col s12">
        <div class="row">
          <div class="input-field col s6">

            <%= form_tag('/login', method: :post) do%>
            <%= text_field_tag 'username', nil, placeholder: "Enter Your Username"%>

          </div>
          <div class="input-field col s6">

            <%= password_field_tag 'password', nil, placeholder: "Enter Your Password"%>
          </div>

          <div>
          <a class="waves-effect waves-light btn-large"><%= submit_tag 'login'%></a>
          </div>
          <%end%>
          <div>OR
          </div>

          <div>
            <a class="waves-effect waves-light btn-large"><%= button_to("sign up", new_user_path, method: :get) %></a>
          </div>

          </div>

        </div>
