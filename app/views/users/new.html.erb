
<div class="center-align">
  <h1>Grab Your Pack, Let's Go!</h1>

  <div class="row">
    <div class="col s12">
      <div class="row">
        <div class="input-field col s6">
          <%= form_for :user, url: '/users' do |f| %>
            Name: <%= f.text_field :name, placeholder: "Enter Your Name" %> </br></br>
            Username: <%= f.text_field :username, placeholder: "Enter A Username" %> </br></br>

            Password: <%= f.password_field :password %></br></br>
            Re-Enter Your Password: <%= f.password_field :password_confirmation %></br></br>

          <br/>

            <button class="waves-effect waves-light btn-large"><%= f.submit "Sign Up" %></button>
          <% end %>

      </div>

      <div class="col s6">
        <br/>
        <br/>
        <br/>
        <br/>

        <img src="/assets/images/signup.png" style="width:100%">
      </div>
    </div>
  </div>
</div>
